@page
@model STProject.Pages.Community.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Community</h4>
<hr />

<div class="row">
    <h3 class="text-center mb-4">Edit your OWN community:</h3>
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Community.Id" />
            <div class="text-center form-group">
                <label asp-for="Community.Name"></label>
                <input asp-for="Community.Name" class="form-control" placeholder="Joseph Joestar">
                <span asp-validation-for="Community.Name" class="small text-danger"></span>
            </div>
            <br />
            <div class="text-center form-group">
                <label asp-for="Community.Description"></label>
                <input asp-for="Community.Description" class="form-control" placeholder="This is a community for people interested in JoJo">
                <span asp-validation-for="Community.Description" class="small text-danger"></span>
            </div>
            <br />
            <select asp-for="Community.OwnerId" class="visually-hidden" asp-items="ViewBag.OwnerId"></select>
            <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
