@page
@model STProject.Pages.Community.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Community</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Community.Id" />
            <div class="form-group">
                <label asp-for="Community.Name" class="control-label"></label>
                <input asp-for="Community.Name" class="form-control" />
                <span asp-validation-for="Community.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.Description" class="control-label"></label>
                <input asp-for="Community.Description" class="form-control" />
                <span asp-validation-for="Community.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.ImageUrl" class="control-label"></label>
                <input asp-for="Community.ImageUrl" class="form-control" />
                <span asp-validation-for="Community.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Community.IsPrivate" /> @Html.DisplayNameFor(model => model.Community.IsPrivate)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Community.CreatedOn" class="control-label"></label>
                <input asp-for="Community.CreatedOn" class="form-control" />
                <span asp-validation-for="Community.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Community.IsDeleted" /> @Html.DisplayNameFor(model => model.Community.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Community.DeletedOn" class="control-label"></label>
                <input asp-for="Community.DeletedOn" class="form-control" />
                <span asp-validation-for="Community.DeletedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.CategoryId" class="control-label"></label>
                <select asp-for="Community.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Community.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.OwnerId" class="control-label"></label>
                <select asp-for="Community.OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                <span asp-validation-for="Community.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
